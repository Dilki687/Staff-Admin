<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
         <servlet>
         <servlet-name>login</servlet-name>
         <servlet-class>staffAdmin.staffAdminLoginServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         <servlet-name>login</servlet-name>
         <url-pattern>/log</url-pattern>
         </servlet-mapping>
         
         <servlet>
         <servlet-name>insert</servlet-name>
         <servlet-class>staffAdmin.staffInsertServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         <servlet-name>insert</servlet-name>
         <url-pattern>/insert</url-pattern>
         </servlet-mapping>
         
         <servlet>
		<servlet-name>displayStaff</servlet-name>
		<servlet-class>staffAdmin.displaystaffServlet</servlet-class>
	    </servlet>
	    <servlet-mapping>
		<servlet-name>displayStaff</servlet-name>
		<url-pattern>/disStaff</url-pattern>
	    </servlet-mapping>
	    
	    <servlet>
		<servlet-name>updateStaff</servlet-name>
		<servlet-class>staffAdmin.updateStaffServlet</servlet-class>
	    </servlet>
	    <servlet-mapping>
		<servlet-name>updateStaff</servlet-name>
		<url-pattern>/updateStaff</url-pattern>
	    </servlet-mapping>
	    
	    <servlet>
		<servlet-name>deleteStaff</servlet-name>
		<servlet-class>staffAdmin.deleteStaffServlet</servlet-class>
	    </servlet>
	    <servlet-mapping>
		<servlet-name>deleteStaff</servlet-name>
		<url-pattern>/deleteStaff</url-pattern>
	    </servlet-mapping>
	    
	    <welcome-file-list>
        <welcome-file>adminLogin.jsp</welcome-file>
        </welcome-file-list>
         
</web-app>         
         
